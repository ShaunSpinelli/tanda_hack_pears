<%= form_tag reveal_path, class: "form-signin", method: 'patch' do %>
  <%= hidden_field_tag :reveal, '' %>
  <%= hidden_field_tag :pairing_id, @pairings.id %>
  
  <%= check_box_tag :reveal, checked = true %> Reveal yourself?</br></br>
 <div>
  </br>
  <%= submit_tag "Submit", class:"btn btn-large btn-success" %>
 </div>
 <% end %>


<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          
            <li><%= link_to "jimmyboy", conversations_path(user_id: @user), remote: true, method: :post %></li>
          
        </ul>
      </div>
    </div>
  </div>
</div>
